<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"

        android:paddingBottom="50dp"
        tools:context=".fragments.BonosFragment">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Billetes sencillos"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <de.codecrafters.tableview.TableView
            android:id="@+id/tableSencillos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            app:tableView_columnCount="2"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:drawableLeft="@drawable/ic_info"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="Descuento del 60% en bonos hasta el 30 de Junio de 2023. No aplica a billetes sencillos. El descuento está aplicado en el precio de la app."
            />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:drawableLeft="@drawable/ic_info"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="Recuerda que el precio de emisión de tarjeta es de 1€"
             />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Tarjeta tricolor general"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <de.codecrafters.tableview.TableView
            android:id="@+id/tableTricolorGeneral"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            app:tableView_columnCount="2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Tarjeta tricolor estudiante"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <de.codecrafters.tableview.TableView
            android:id="@+id/tableTricolorEstudiante"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            app:tableView_columnCount="2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Tarjeta tricolor familia numerosa"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <de.codecrafters.tableview.TableView
            android:id="@+id/tableTricolorFamiliaNumerosa"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            app:tableView_columnCount="2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Bonos tranvía"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <de.codecrafters.tableview.TableView
            android:id="@+id/tableTricolorTranvia"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            app:tableView_columnCount="2"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:drawableLeft="@drawable/ic_info"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="Los bonos generales se pueden comprar en el propio autobús o en las máquinas autoventa del tranvía, los bonos personalizados (estudiantes, familia numerosa...) deberás obtenerlo en las oficinas de la empresa de transporte público."
            />


    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>